{
    "name": "balanca-app",
    "version": "1.2.2",
    "description": "Aplicação para obter peso da balança via porta serial",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "nodemon --watch . --exec electron .",
        "app:dir": "electron-builder --dir",
        "app:dist": "electron-builder",
        "publish": "dotenv -- electron-builder --win -p always"
    },
    "author": "Rafael Ferreira Costa",
    "license": "ISC",
    "build": {
        "win": {
            "publish": {
                "provider": "github",
                "owner": "jadlog-itajai",
                "repo": "balanca-app",
                "releaseType": "draft"
            }
        },
        "appId": "com.electron.balanca-app",
        "productName": "Balança App",
        "extraFiles": [
            {
                "from": "./Assets/icon.png",
                "to": "./resources/"
            }
        ]
    },
    "dependencies": {
        "auto-launch": "^5.0.5",
        "dotenv": "^16.0.0",
        "electron-log": "^4.4.6",
        "electron-store": "^8.0.1",
        "electron-updater": "^4.6.5",
        "express": "^4.17.2",
        "serialport": "^10.3.0"
    },
    "devDependencies": {
        "electron": "^17.0.1",
        "electron-builder": "^22.14.13",
        "nodemon": "^2.0.15"
    }
}
